// Configure the generated sources
sourceSets {
	main {
		java {
			srcDirs 'generated/main/grpc'
			srcDirs 'generated/main/java'
		}
	}
}

tasks.named('test') {
	useJUnitPlatform()
}
// This task ensures that the compileJava task depends on the generateProto task
tasks.named("compileJava").configure {
	dependsOn tasks.named("generateProto")
}

// Ensure the jar file includes the generated sources
jar {
	duplicatesStrategy = DuplicatesStrategy.INCLUDE
	from {
		configurations.compileClasspath.collect { it.isDirectory() ? it : zipTree(it) }
	}
	manifest {
		attributes(
				'Main-Class': 'com.aws_s3_wrapper.aws_s3_wrapper.AwsS3WrapperApplication'
		)
	}
}
